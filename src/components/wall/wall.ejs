<div data-template="wall" data-ng-controller="WallCtrl">
    <div class="wall">
        <div class="wall-ui">
            <div class="ui-btn" ng-click="addNote()">
                <i class="fa fa-pencil"></i>
            </div>
        </div>
        <div class="wall-ui alt">
            <div class="ui-btn" ng-click="changeScale(0.2)">
                <i class="fa fa-plus"></i>
            </div>
            <div class="ui-btn" ng-click="changeScale(-0.2)">
                <i class="fa fa-minus"></i>
            </div>
        </div>
        <div class="wall-canvas">
            <div class="canvas-title">{{getWall()}}</div>

            <div class="note colour-{{note.colour}}"
                 ng-repeat="note in getNotes() track by $index"
                 ng-click="$event.stopPropagation()"
                 note-id="{{$index}}" style="top:{{note.top}}px;left:{{note.left}}px;transform: rotate({{note.angle}}deg)"
                    >
                <div class="note-slip"></div>
                <div class="note-theme" ng-click="changeColour($index); $event.stopPropagation()">
                    <i class="fa fa-circle"></i>
                </div>
                <div class="note-theme" ng-click="changeFontSize($index, 2); $event.stopPropagation()">
                    <i class="fa fa-chevron-up"></i>
                </div>
                <div class="note-theme" ng-click="reduceFontSize($index, 2); $event.stopPropagation()">
                    <i class="fa fa-chevron-down"></i>
                </div>
                <div class="note-close" ng-click="removeNote($index); $event.stopPropagation()">
                    <i class="fa fa-times"></i>
                </div>
                <textarea class="note-content" ng-model="note.content" ng-blur="updateNote($index)" style="font-size:{{note.fontSize}}px;"></textarea>
            </div>
        </div>
    </div>
</div>
